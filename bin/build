#!/usr/bin/env bash

function usage(){
  echo "Usage: $0 [kernel|selinux|userspace]"
  exit
}

[[ $# -eq 0 ]] && usage

target=$1
logfile="${PWD}/out.log"

# Get the environment setup
pushd $PREFIX
source build/envsetup.sh
setpaths
lunch full-eng

# Keep make options consistant across builds
log=" 2>&1 | tee $logfile"
function my_make(){
  cmd="time make ${@} $log"
  eval $cmd 
}

#make_opts="-j4 LOCAL_LDLIBS+=-lX11 CFLAGS+='-pthreads'"
make_opts="LOCAL_LDLIBS+=-lX11 CFLAGS+='-pthreads'"
# Make depending on target
case $target in
  kernel)
    my_make droid
    ;;
  selinux)
    pushd $PREFIX/kernel/goldfish
    my_make ARCH=arm goldfish_armv7_defconfig
    my_make ARCH=arm CROSS_COMPILE=$PREFIX/prebuilt/linux-x86/toolchain/arm-eabi-4.4.3/bin/arm-eabi-
    popd
    ;;
  userspace)
    opts="HAVE_SELINUX=true $make_opts"
    for t in aapt libfst ""
    do
      my_make $opts $t
    done
    ;;
  *)
    my_make $target
    ;;
esac

popd
